#include <iostream>
using namespace std;

int main()        
{
    int opcion, cantidad;
    float suma=0, ingreso, precio;

    do {
        cout << "MENU" << endl;
        cout << "1. hamburguesas" << endl;
        cout << "2. hamburguesa con queso" << endl;
        cout << "3. papas fritas" << endl;
        cout << "4. soda" << endl;
        cout << "0. salir" << endl;
        cout << "ingrese una opcion: ";
        precio = 0;
        cin >> opcion;
        switch (opcion) {
             case 1: precio = 3;
                 break;
             case 2: precio = 5;
                 break;
             case 3: precio = 2;
                 break;
             case 4: precio = 2.5;
                 break;
             case 0:cout << "Salir" << endl;
                 break;
             default:
                 cout << "Error" << endl;
        }
        if (precio>0) {
            cout << "ingrese la cantidad: ";
            cin >> cantidad;
            ingreso = cantidad * precio;
            suma = suma + ingreso; 

        }
    } while (opcion != 0); //do-while sale for falso
    cout << "el monto total es: " << suma;
    return 0;


}
